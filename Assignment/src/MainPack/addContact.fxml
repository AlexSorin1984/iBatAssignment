<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="MainPack.AddContactController"
            prefHeight="150" prefWidth="210.0">
    <VBox style="-fx-padding:10px">
        <HBox style="-fx-padding:5px">
            <Label minWidth="100" text="First name: "/>
            <TextField fx:id="firstNameTextField"/>
        </HBox>
        <HBox style="-fx-padding:5px">
            <Label minWidth="100" text="Last name: "/>
            <TextField fx:id="lastNameTextField"/>
        </HBox>
        <HBox style="-fx-padding:5px">
            <Label minWidth="100" text="Phone: "/>
            <TextField fx:id="phoneTextField"/>
        </HBox>
        <HBox style="-fx-padding:5px">
            <Label minWidth="100"/>
            <Button onAction="#addContactSave" fx:id="addContactSaveButton" text="Save contact"/>
        </HBox>
    </VBox>
</AnchorPane>
