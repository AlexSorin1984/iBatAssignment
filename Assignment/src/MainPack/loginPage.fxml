<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<GridPane fx:controller="MainPack.LoginPageController"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">

    <Label text="Username" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <Label text="Password" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
    <TextField minWidth="210" fx:id="username" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <PasswordField minWidth="210" fx:id="password" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Button onAction="#onLoginButtonClicked" fx:id="loginbutton" text="LOG IN" textAlignment="CENTER" minWidth="210" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <Label fx:id="loginerror" maxWidth="250" GridPane.rowIndex="3" />
</GridPane>